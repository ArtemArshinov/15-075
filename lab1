#include "stdafx.h"
#include "stdio.h"
#include <cstdlib>

int main()
{
int i,c,k,min,max;
int N[5] = {9,12,2,22,30};

k = 0;
for (i = 0; i < 5;++i){
printf("%d\n", N[i]);
k = k + N[i];
}

c = 0;
for (i = 0; i < 5; ++i){
c = c + 1;
}

max = N[0];        

for (int i = 1; i < 5; i++) {  
	if (N[i] > max) {
		max = N[i];
	}
}

min = N[0];
for (i = 0; i < 5; ++i) {
	if (N[i] < min) {
min = N[i];
}
}
printf("amount=%d\n", c);
printf("sum=%d\n", k);
printf("max=%d\n", max);
printf("min=%d\n", min);
system ("pause");

return 0;
}
